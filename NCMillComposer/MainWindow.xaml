<Window x:Class="NCMillComposer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NCMillComposer"
        mc:Ignorable="d"
        Title="NC Mill Composer" 
        Icon="Resources\AppIcon\appicon.png"
        SnapsToDevicePixels="True"
        Loaded="OnLoad"
        MinWidth="1250" 
        MinHeight="800"
        WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Кнопки в левом верхнем углу -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="FileOpenButton" Grid.Row="0" Click="FileOpenButton_ClickAction" Content="Открыть" Margin="0,0,0,5"/>
            <TextBox x:Name="FileNameFilterTextBox" TextAlignment="Left" KeyDown="FileNameFilterTextBox_KeyDownAction" Grid.Row="1" />
            <Button x:Name="FileSaveAndCloseButton" Grid.Row="2" Click="FileSaveAndCloseButton_ClickAction" Content="Сохранить и закрыть" Margin="0,5,0,0"/>
        </Grid>
        <!---->

        <!-- Значения в верхней части окна -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="165"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="165"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" >
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" FontSize="12" HorizontalAlignment="Center" Content="Старт Z  за   Проход   mm  Итог Z" />
                    <TextBox x:Name="StartZTextBox" PreviewKeyDown="ChangeFocusToPassTextBox_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="0" />
                    <TextBox x:Name="PassTextBox" PreviewKeyDown="ChangeFocusToResultZTextBox_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action"  Grid.Row="1" Grid.Column="2" />
                    <TextBox x:Name="ResultZTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="4" />
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Z неопасно" />
                    <TextBox x:Name="SafeZTextBox" PreviewKeyDown="ChangeFocusToMillDTextBoxOrMillTextBox_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="0" />
                    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="D фрезы" />
                    <TextBox x:Name="MillDTextBox" PreviewKeyDown="ChangeFocusToMillTextBox_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="2" />
                    <Label Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Шпиндель" />
                    <TextBox x:Name="MillTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="4" />
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="1">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="G01 подача mm/мин Z" />
                    <TextBox x:Name="G01TextBox" PreviewKeyDown="ChangeFocusToMinZTextBox_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="0" />
                    <TextBox x:Name="MinZTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="2" />
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="Обработка Закрытых векторов" />
                    <ComboBox x:Name="CloseVectorProcessingCombobox1" SelectionChanged="CloseVectorProcessingCombobox1_SelectionChangedAction" Grid.Row="1" Grid.Column="0" />
                    <ComboBox x:Name="CloseVectorProcessingCombobox2" SelectionChanged="CloseVectorProcessingCombobox2_SelectionChangedAction" Grid.Row="1" Grid.Column="2" />
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" HorizontalAlignment="Center" Content="Привязка Точек =0= -1- -2-" />
                    <ComboBox x:Name="PointsBindingCombobox" SelectionChanged="PointsBindingCombobox_SelectionChangedAction" Grid.Row="1" Grid.Column="0" />
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Content="Открытые вектора" />
                    <ComboBox x:Name="OpenVectorsCombobox" SelectionChanged="OpenVectorsCombobox_SelectionChangedAction" Grid.Row="1" Grid.Column="0" />
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="4">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="X mm  Точка -1-  Y mm" />
                    <TextBox x:Name="Point1XTextBox" PreviewKeyDown="ChangeFocusToPoint1YTextBox_KeyDownAction" LostFocus="TextBox_LeaveWithReDrawAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" MouseDoubleClick="Point1TextBox_MouseDoubleClickAction" Grid.Row="1" Grid.Column="0" />
                    <TextBox x:Name="Point1YTextBox" PreviewKeyDown="ChangeFocusToPoint2XTextBox_KeyDownAction" LostFocus="TextBox_LeaveWithReDrawAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" MouseDoubleClick="Point1TextBox_MouseDoubleClickAction" Grid.Row="1" Grid.Column="2" />
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="4">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="X mm  Точка -2-  Y mm" />
                    <TextBox x:Name="Point2XTextBox" PreviewKeyDown="ChangeFocusToPoint2YTextBox_KeyDownAction" LostFocus="TextBox_LeaveWithReDrawAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" MouseDoubleClick="Point2TextBox_MouseDoubleClickAction" Grid.Row="1" Grid.Column="0" />
                    <TextBox x:Name="Point2YTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" LostFocus="TextBox_LeaveWithReDrawAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" MouseDoubleClick="Point2TextBox_MouseDoubleClickAction" Grid.Row="1" Grid.Column="2" />
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Content="Лазер Y" />
                    <TextBox x:Name="LaserYTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" LostFocus="TextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="0" />
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="7">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Content="Скрыть &lt;" />
                    <TextBox x:Name="HideTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="0" />
                </Grid>
            </Border>

            <Grid Grid.Row="1" Grid.Column="5" Margin="5">
                <Button x:Name="RotateButton" Click="RotateButton_ClickAction" Padding="5" Height="40" >
                    <Image Source="Resources\Images\rotate.png" />
                </Button>
            </Grid>

            <Border Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Content="Масштаб" />
                    <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Content="Авто" />
                    <TextBox x:Name="ScaleTextBox" PreviewKeyDown="ChangeFocusToFileOpenButton_KeyDownAction" LostFocus="ScaleTextBox_LeaveAction" PreviewTextInput="AllowOnlyFloatDigitInputToTextBox_Action" Grid.Row="1" Grid.Column="0" />
                    <CheckBox x:Name="ScaleAutoCheckBox" Checked="ScaleAutoCheckBox_CheckedChangedAction" Unchecked="ScaleAutoCheckBox_CheckedChangedAction" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </Border>

            <Grid Grid.Row="0" Grid.Column="8" Grid.RowSpan="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Button x:Name="Folder1Button" Click="Folder1Button_ClickAction" Grid.Row="0" Padding="5" >
                    <Image Source="Resources\Images\folder1.png" />
                </Button>
                <Button x:Name="Folder2Button" Click="Folder2Button_ClickAction" Grid.Row="2" Padding="5" >
                    <Image Source="Resources\Images\folder2.png" />
                </Button>
                <Button x:Name="Folder_ncButton" Click="Folder_ncButton_ClickAction" Grid.Row="4" Padding="5" >
                    <Image Source="Resources\Images\folder_nc.png" />
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="9" Grid.RowSpan="2" Margin="5">
                <TextBox x:Name="DebugTextBox" GotFocus="DebugTextBox_FocusAction" MouseDoubleClick="DebugTextBox_MouseDoubleClickAction" TextChanged="DebugTextBox_TextChangedAction" IsReadOnly="True" FontSize="12" TextAlignment="Left" VerticalContentAlignment="Top" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />
            </Grid>
        </Grid>
        <!---->

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="10" Margin="2.5" MinWidth="500" MinHeight="500">
            <Grid>
                <Image Source="Resources\Images\background.png" MaxWidth="500" />
                <Canvas x:Name="Canvas" SizeChanged="Canvas_SizeChangedAction" />
            </Grid>
        </Border>
    </Grid>
</Window>
